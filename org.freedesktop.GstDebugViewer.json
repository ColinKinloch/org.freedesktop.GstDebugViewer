{
    "app-id" : "org.freedesktop.GstDebugViewer",
    "branch" : "stable",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "gst-debug-viewer",
    "rename-icon" : "gst-debug-viewer",
    "copy-icon" : true,
    "finish-args" : [
        "--socket=x11",
        "--share=ipc",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=org.freedesktop.Notifications",
        "--filesystem=host",
        "--device=dri"
    ],
    "modules" : [
        {
            "name" : "gst-debug-viewer",
            "buildsystem" : "meson",
            "config-opts": [
                "-Dvalidate=disabled",
                "-Dgtk_doc=disabled",
                "-Dintrospection=disabled",
                "-Dtests=disabled",
                "-Ddebug_viewer=enabled"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "branch" : "1.18.6",
     		            "commit": "5c8e4b99864162f90c6e1c1946229c604067ac03",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gst-devtools.git"
                },
                {
                    "type": "patch",
                    "path": "patches/0001-debug-viewer-Make-appdata-valid-again.patch"
                }
            ]
        }
    ]
}

